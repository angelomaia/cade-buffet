<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="border-card-7">
        <h3 class="text-center">Avaliações do Buffet <%= @buffet.name %></h3>
      </div>

      <div class="mt-3 mb-4 text-center">
        <%= link_to 'Voltar', @buffet, class: "btn btn-secondary" %>
      </div>

      <% @ratings.each do |rating| %>
        <%= link_to buffet_rating_path(rating.id), class: "card-link invisible-link" do %>
          <div class="border-card-7">
            <h5 class="text-center"><%= rating.event_type.name %> em <%= rating.order.date %></h5>
            <p>Nota: <%= rating.grade %></p>
            <p>Comentário: <%= rating.text %></p>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
