    <%= f.label :corporate_name %>
    <%= f.text_area :corporate_name %>
  </div>
  <div>
    <%= f.label :cnpj %>
    <%= f.text_field :cnpj %>    
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>    
  </div>
