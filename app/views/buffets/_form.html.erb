
<%= form_with(model: @buffet) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 3 %>
    <small class="form-text text-muted">Um texto que descreva o seu Buffet.</small>
  </div>

  <div class="mb-3">
    <%= f.label :corporate_name, class: 'form-label' %>
    <%= f.text_field :corporate_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :cnpj, class: 'form-label' %>
    <%= f.text_field :cnpj, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :neighborhood, class: 'form-label' %>
    <%= f.text_field :neighborhood, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :city, class: 'form-label' %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :state, class: 'form-label' %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, class: 'form-label' %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :zipcode, class: 'form-label' %>
    <%= f.text_field :zipcode, class: 'form-control' %>
  </div>

  <div class="border-card-7 mb-3">
    <dl>
      <dt>MÃ©todos de Pagamento:</dt>
    <dd></dd>
      <%= f.check_box :pix, class: 'form-check-input' %>
      <%= f.label :pix, class: 'form-check-label' %>
    </dd>
    <dd></dd>
      <%= f.check_box :debit, class: 'form-check-input' %>
      <%= f.label :debit, class: 'form-check-label' %>
    </dd>
    <dd></dd>
      <%= f.check_box :credit, class: 'form-check-input' %>
      <%= f.label :credit, class: 'form-check-label' %>
    </dd>
    <dd></dd>
      <%= f.check_box :cash, class: 'form-check-input' %>
      <%= f.label :cash, class: 'form-check-label' %>
    </dd>
    </dl>
  </div>

  <div class="text-center">
    <%= f.submit 'Registrar', class: 'btn btn-primary' %>
  </div>
<% end %>