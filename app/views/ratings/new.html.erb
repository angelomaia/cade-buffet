<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="border-card-7" style="width: 600px;">
      <h2 class="mb-4 text-center">Avalie o Buffet <%= @buffet.name %></h2>
      <h3 class="mb-4 text-center"><%= @event_type.name %> em <%= @order.date %></h3>
      <% if @rating.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% @rating.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: [@order, @rating]) do |f| %>
        <div class="border-card-3 mb-3 text-center">
          <%= f.label :grade, class: 'form-label' %>: <br>
          <div class="form-check form-check-inline">
            <%= f.radio_button :grade, 1, class: 'form-check-input' %>
            <%= f.label :grade_1, '1', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :grade, 2, class: 'form-check-input' %>
            <%= f.label :grade_2, '2', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :grade, 3, class: 'form-check-input' %>
            <%= f.label :grade_3, '3', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :grade, 4, class: 'form-check-input' %>
            <%= f.label :grade_4, '4', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :grade, 5, class: 'form-check-input' %>
            <%= f.label :grade_5, '5', class: 'form-check-label' %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :text, class: 'form-label' %>: 
          <%= f.text_area :text, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :photos, class: 'form-label' %>: 
          <%= f.file_field :photos, multiple: true, class: 'form-control' %>
        </div>
        <div class="mb-3 text-center">
          <%= f.submit 'Enviar Avaliação', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
          <%= link_to 'Voltar', :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>




