<h1>Editar Tipo de Evento</h1>

<% if @event_type.errors.any? %>
  <% @event_type.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= render 'form' %>
<% if !@event_type.price %>
  <%= link_to 'Definir Preços', event_type_prices_event_type_path %>
<% else %>
  <%= link_to 'Editar Preços', event_type_prices_event_type_path %>
<% end %>

<%= link_to 'Voltar', :back %>