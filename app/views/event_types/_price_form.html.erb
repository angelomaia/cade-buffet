
<%= form_with(model: @event_type) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :min_people %>
    <%= f.text_field :min_people %>    
  </div>
  <div>
    <%= f.label :max_people %>
    <%= f.text_field :max_people %>    
  </div>
  <div>
    <%= f.label :duration %>
    <%= f.text_field :duration %>    
  </div>
  <div>
    <%= f.label :menu %>
    <%= f.text_area :menu %>    
  </div>
  <div>
    <%= f.label :alcohol %>
    <%= f.check_box :alcohol %>
  </div>
  <div>
    <%= f.label :decoration %>
    <%= f.check_box :decoration %>
  </div>
  <div>
    <%= f.label :parking %>
    <%= f.check_box :parking %>
  </div>
  <div>
    <%= EventType.human_attribute_name(:location)%>
    <% EventType.locations.each do |key, value| %>
      <div></div>
        <%= f.label :location, EventType.human_attribute_name("location.#{key}") %>
        <%= f.radio_button :location, key %>
      </div>
    <% end %>
  </div>

  <h2>Pre√ßos do Evento</h2>
  <%= f.fields_for :price do |price_f| %>
    <div>
      <%= price_f.label :base, Price.human_attribute_name(:base) %>
      <%= price_f.number_field :base, step: '0.01' %>
    </div>
    <div>
      <%= price_f.label :extra_person, Price.human_attribute_name(:extra_person) %>
      <%= price_f.number_field :extra_person, step: '0.01' %>
    </div>
    <div>
      <%= price_f.label :extra_hour, Price.human_attribute_name(:extra_hour) %>
      <%= price_f.number_field :extra_hour, step: '0.01' %>
    </div>
    <div>
      <%= price_f.label :weekend_base, Price.human_attribute_name(:weekend_base) %>
      <%= price_f.number_field :weekend_base, step: '0.01' %>
    </div>
    <div>
      <%= price_f.label :weekend_extra_person, Price.human_attribute_name(:weekend_extra_person) %>
      <%= price_f.number_field :weekend_extra_person, step: '0.01' %>
    </div>
    <div>
      <%= price_f.label :weekend_extra_hour, Price.human_attribute_name(:weekend_extra_hour) %>
      <%= price_f.number_field :weekend_extra_hour, step: '0.01' %>
    </div>
  <% end %>
  <div>
    <%= f.submit 'Registrar' %>
  </div>
<% end %>