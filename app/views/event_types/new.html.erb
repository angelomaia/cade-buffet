<h1>Novo Tipo de Evento</h1>

<%= form_with(model: @event_type) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :min_people %>
    <%= f.text_field :min_people %>    
  </div>
  <div>
    <%= f.label :max_people %>
    <%= f.text_field :max_people %>    
  </div>
  <div>
    <%= f.label :duration %>
    <%= f.text_field :duration %>    
  </div>
  <div>
    <%= f.label :menu %>
    <%= f.text_area :menu %>    
  </div>
  <div>
    <%= f.label :alcohol %>
    <%= f.check_box :alcohol %>
  </div>
  <div>
    <%= f.label :decoration %>
    <%= f.check_box :decoration %>
  </div>
  <div>
    <%= f.label :parking %>
    <%= f.check_box :parking %>
  </div>
  <div>
    <%= EventType.human_attribute_name(:location)%>
    <% EventType.locations.each do |key, value| %>
      <div></div>
        <%= f.label :location, EventType.human_attribute_name("location.#{key}") %>
        <%= f.radio_button :location, key %>
      </div>
    <% end %>
  </div>
  <div>
    <%= f.submit 'Registrar' %>
  </div>
<% end %>